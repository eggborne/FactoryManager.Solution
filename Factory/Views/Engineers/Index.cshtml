@{
  Layout = "_Layout";
}

@using Factory.Models;

<h2>Engineers</h2>

@if (@Model.Count == 0)
{
  <h3>No Engineers have been added yet!</h3>
}
else
{
  <ul class="capsule-list engineer-list">
  @foreach (Engineer engineer in Model)
  {
    <li>@Html.ActionLink($"{engineer.FirstName} {engineer.LastName}", "Details", new { id = engineer.EngineerId })</li>
  }
  </ul>
}
<div class="button-area">
  <a href='@Url.Action("Index", "Home")'>
    <button>Home</button>
  </a>
  <a href='@Url.Action("Create")'>
    <button class="green">Create new Engineer</button>
  </a>
</div>
