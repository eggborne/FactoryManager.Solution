@{
  Layout = "_Layout";
}

@model Factory.Models.Engineer

<div class="view-header"><h2>Editing <span class="highlighted">@Html.DisplayFor(model => model.FirstName) @Html.DisplayFor(model => model.LastName)</span></h2></div>

<div class="view-body edit">

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.EngineerId)

  <div class="form-row">
      @Html.LabelFor(model => model.FirstName, "First name")
      @Html.EditorFor(model => model.FirstName)
      @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "error-message" })
  </div>
  <div class="form-row">
      @Html.LabelFor(model => model.LastName, "Last name")
      @Html.EditorFor(model => model.LastName)
      @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "error-message" })
  </div>
  <div class="form-row">
    @Html.LabelFor(model => model.PhoneNumber, "Phone number")
    @Html.EditorFor(model => model.PhoneNumber)
    @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "error-message" })
  </div>

  <div class="form-row form-grid">
    <h3>Availablilty</h3>
    <div class="day-label">Monday</div><div><input name="MondayStartTime" class="start-time" type="time"></div><div><input name="MondayEndTime" class="end-time" type="time"></div>
    <div class="day-label">Tuesday</div><div><input name="TuesdayStartTime" class="start-time" type="time"></div><div><input name="TuesdayEndTime" class="end-time" type="time"></div>    
    <div class="day-label">Wednesday</div><div><input name="WednesdayStartTime" class="start-time" type="time"></div><div><input name="WednesdayEndTime" class="end-time" type="time"></div>    
    <div class="day-label">Thurdsay</div><div><input name="ThurdsayStartTime" class="start-time" type="time"></div><div><input name="ThurdsayEndTime" class="end-time" type="time"></div>    
    <div class="day-label">Friday</div><div><input name="FridayStartTime" class="start-time" type="time"></div><div><input name="FridayEndTime" class="end-time" type="time"></div>    
    <div class="day-label">Saturday</div><div><input name="SaturdayStartTime" class="start-time" type="time"></div><div><input name="SaturdayEndTime" class="end-time" type="time"></div>    
    <div class="day-label">Sunday</div><div><input name="SundayStartTime" class="start-time" type="time"></div><div><input name="SundayEndTime" class="end-time" type="time"></div>
  </div>

  <div class="form-row admin">
    @Html.LabelFor(model => model.HourlyRate, "Hourly rate")
    @Html.EditorFor(model => model.HourlyRate, new { @type="number"})
    @Html.ValidationMessageFor(model => model.HourlyRate, "", new { @class = "error-message" })
  </div>
  <button class="green" type="submit">Save</button>
}

</div>

<div class="button-area">
  <a href='@Url.Action("Details", "Engineers", new { id = Model.EngineerId })'>
    <button>Cancel</button>
  </a>
</div>