@{
  Layout = "_Layout";
}

@using Factory.Models;

<div class="view-header"><h2>Machines</h2></div>

<div class="view-body index">

@if (@Model.Count == 0)
{
  <h3>No Machines have been added yet!</h3>
}
else
{
  <ul class="capsule-list machine-list">
  @foreach (Machine machine in Model)
  {
    <li>@Html.ActionLink($"{machine.Manufacturer} {machine.Model}", "Details", new { id = machine.MachineId })</li>
  }
  </ul>
}

</div>

<div class="button-footer">
  <hr />
  <a href='@Url.Action("Create")'>
    <button class="green">Create new Machine</button>
  </a>
  <a href='@Url.Action("Index", "Home")'>
    <button>Home</button>
  </a>
</div>
