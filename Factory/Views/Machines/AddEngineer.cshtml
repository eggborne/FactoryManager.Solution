@using System.Linq;

@{
  Layout = "_Layout";
}

@model Factory.Models.Machine

<h2>Certify an engineer for machine <span class="highlighted">@Html.DisplayFor(model => model.Manufacturer) @Html.DisplayFor(model => model.Model)</span></h2>

@using (Html.BeginForm(FormMethod.Post, new { @class = "dropdown-form" }))
{
  @Html.HiddenFor(model => model.MachineId)

  var counter=0;
  foreach(var a in ViewBag.EngineerId)
  {
    counter++;
    break;
  }
  
  @if(counter > 0){
    <div class="form-row">
      @Html.Label("Select Engineer")
      @Html.DropDownList("EngineerId")
      <button class="green" type="submit">Save</button>
    </div>
  } else {
    <div class="dropdown-empty-message">You must add an Engineer first!</div>
  }
}

<div class="button-area">
  <a href='@Url.Action("Details", "Machines", new { id = Model.MachineId })'>
    <button>Cancel</button>
  </a>
</div>