@{
  Layout = "_Layout";
}

@using Factory.Models;

<div class="view-body home">

<div id="engineer-splash-list" class="dashboard-section obscured">
  <h3>Engineers</h4>
  <ul class="capsule-list engineer-list">
  @foreach (Engineer engineer in ViewBag.engineers)
    {
      <li>@Html.ActionLink($"{engineer.FirstName} {engineer.LastName}", "Details", "Engineers", new { id = engineer.EngineerId })</li>
    }
    <p style="width: 100%">
      <a href='@Url.Action("Create", "Engineers")'>
        <button class="green">Create new Engineer</button>
      </a>
    </p>
  </ul>
</div>

<div id="machine-splash-list" class="dashboard-section obscured">
  <h3>Machines</h4>
  <ul class="capsule-list machine-list">
    @foreach (Machine machine in ViewBag.machines)
    {
      <li>@Html.ActionLink($"{machine.Manufacturer} {machine.Model}", "Details", "Machines", new { id = machine.MachineId })</li>
    }
    <p style="width: 100%">
      <a href='@Url.Action("Create", "Machines")'>
        <button class="green">Create new Machine</button>
      </a>
    </p>
  </ul>
</div>

</div>

<div class="button-area">
  <a href='@Url.Action("Index", "Engineers")'>
    <button>See all Engineers</button>
  <a href='@Url.Action("Index", "Machines")'>
    <button>See all Machines</button>
  </a>
</div>